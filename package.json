{
  "name": "afi-engine",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*"
  },
  "alias": {
    "afi-engine": "./src",
    "elizaos": "./src"
  },
  "scripts": {
    "build": "tsc",
    "simulate-signal": "node --loader ts-node/esm ops/runner/simulate-full-pipeline.ts",
    "codex-lint": "node --loader ts-node/esm ops/codexLint.ts",
    "mentor-eval": "node --loader ts-node/esm ops/mentorChain.ts",
    "test": "jest",
    "validate-all": "npm run build && npm run codex-lint && npm run simulate-signal && npm run mentor-eval"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/mongodb": "^4.0.6",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongodb": "^6.18.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.14"
  }
}
